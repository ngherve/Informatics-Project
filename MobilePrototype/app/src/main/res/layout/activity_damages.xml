<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="#ffffff"
                  android:paddingRight="10dp"
                  android:paddingLeft="10dp"
                  android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_margin="20dp"
                android:text="Report Damages"
                android:textStyle="italic"
                android:textColor="#000000"
                android:textSize="30dp" />

        <TextView
                android:id="@+id/txtProdInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:typeface="serif"
                android:textStyle="bold"
                android:scrollbars="vertical"
                android:minLines="2"
                android:hint="Product Info"
                android:inputType="textMultiLine"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:textSize="24dp" />
        <Spinner
                android:id="@+id/spselectprodt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:textAlignment="center"
                android:hint="Product"
                android:textColor="#000000"
                android:textSize="20dp" />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please Upload a picture of the product"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="20dp" />

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/damageimg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:layout_height="150dp"
                android:src="@mipmap/ic_profile_image"/>

        <Button
                android:id="@+id/btntakepic"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_below="@+id/edititem_image"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="Take Picture"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Damage Description"
                android:layout_margin="20dp"
                android:textColor="#000000"
                android:textSize="20dp" />

        <EditText
                android:id="@+id/damagedesc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:textSize="25dp"
                android:textColor="#000000"
                android:lines="7"
                android:gravity="left|top"
                android:minLines="2"
                android:ems="10"
                android:inputType="text|textMultiLine"
                android:lineSpacingExtra="5sp"
                android:padding="5dp"
                android:typeface="serif"
                android:textStyle="italic"
                android:scrollbars="vertical"
                android:layout_gravity="center"
                android:hint="Describe the damage"/>

        <TextView
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"

                android:text="Quantity Damaged" />

        <EditText
                android:id="@+id/eQuant"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_margin="20dp"
                android:layout_marginBottom="10dp" />

        <Button
                android:id="@+id/btnReportDamage"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="Report Damage"
                android:textSize="18dp" />

        <Button
                android:onClick="backAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="BACK"
                android:textSize="18dp">
        </Button>

    </LinearLayout>
</ScrollView>