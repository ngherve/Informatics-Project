<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/nav_drawer1"
        tools:context=".WarehouseHomeActivity">

    <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bgapps">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <FrameLayout
                    android:layout_width="match_parent"
                    android:id="@+id/main_container"

                    android:layout_height="match_parent">

            </FrameLayout>

            <RelativeLayout
                    android:layout_marginTop="32dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/txtDashboard1"
                        android:textSize="22sp"
                        android:text="Warehouse Dashboard"
                        android:textColor="#FFFFFF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:layout_marginTop="6dp"
                        android:layout_below="@id/txtDashboard1"
                        android:textSize="14sp"
                        android:id="@+id/numitems2"
                        android:text="Items in Stock: 5"
                        android:textColor="#52BAFF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <ImageView
                        android:src="@drawable/person"
                        android:layout_alignParentRight="true"
                        android:id="@+id/profilepic1"
                        android:layout_width="62dp"
                        android:layout_height="62dp"/>

            </RelativeLayout>

            <GridLayout

                    android:columnCount="2"
                    android:rowCount="4"
                    android:alignmentMode="alignMargins"
                    android:columnOrderPreserved="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:id="@+id/stock1"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_margin="12dp">
                    <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <ImageView
                                android:src="@drawable/bitcoin"
                                android:layout_width="80dp"
                                android:layout_height="80dp"/>
                        <TextView
                                android:text="View Stock"
                                android:layout_marginTop="12dp"
                                android:textColor="#6f6f6f"
                                android:textSize="18sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:id="@+id/profile1"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_margin="12dp">
                    <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <ImageView
                                android:src="@drawable/contact"
                                android:layout_width="80dp"
                                android:layout_height="80dp"/>
                        <TextView
                                android:text="Profile"
                                android:layout_marginTop="12dp"
                                android:textColor="#6f6f6f"
                                android:textSize="18sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:id="@+id/notifications1"
                        android:layout_rowWeight="1"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_margin="12dp">
                    <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <ImageView
                                android:src="@drawable/chat"
                                android:layout_width="80dp"
                                android:layout_height="80dp"/>
                        <TextView
                                android:text="Notifications"
                                android:layout_marginTop="12dp"
                                android:textColor="#6f6f6f"
                                android:textSize="18sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:id="@+id/scan_item1"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_margin="12dp">
                    <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <ImageView
                                android:src="@drawable/bug"
                                android:layout_width="80dp"
                                android:layout_height="80dp"/>
                        <TextView
                                android:text="Scan Item"
                                android:layout_marginTop="12dp"
                                android:textColor="#6f6f6f"
                                android:textSize="18sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:id="@+id/viewreports1"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_margin="12dp">
                    <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <ImageView
                                android:src="@drawable/bookmark"
                                android:layout_width="80dp"
                                android:layout_height="80dp"/>
                        <TextView
                                android:text="View Report"
                                android:layout_marginTop="12dp"
                                android:textColor="#6f6f6f"
                                android:textSize="18sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:id="@+id/logoff1"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_margin="12dp">
                    <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <ImageView
                                android:src="@drawable/contact"
                                android:layout_width="80dp"
                                android:layout_height="80dp"/>
                        <TextView
                                android:text="Logout"
                                android:layout_marginTop="12dp"
                                android:textColor="#6f6f6f"
                                android:textSize="18sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </GridLayout>

        </LinearLayout>

    </ScrollView>

    <android.support.design.widget.NavigationView
            app:headerLayout="@layout/header"
            android:id="@+id/nav_menu1"
            android:layout_width="wrap_content"
            android:background="@color/white"
            app:itemTextColor="@color/darkgray"
            app:itemIconTint="@color/darkgray"
            app:menu="@menu/drawermenu"
            android:layout_gravity="start"
            android:layout_height="match_parent">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
